{
  "manifest_version": 3,
  "name": "Decline Autofill",
  "version": "1.0",
  "description": "Automatically checks radio buttons or checkboxes with labels containing 'decline' or 'wish'.",
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
